@{
    ViewData["Title"] = "Login";
}

<div class="flex flex-1 item-center w-screen justify-center mt-12">
    <form action="/Users/Login" method="post">
        <div class="flex flex-col w-[32rem] h-[22rem] align-middle bg-slate-200 gap-6 items-center justify-center">
            <p class="mt-4 text-3xl text-indigo-600 tracking-widest">Welcome Back</p>
            <div class="px-8 w-full">
                <input class="w-full outline-0 focus:outline-0 ring-0 rounded-xl p-3" type="email" name="Email" id="Email" placeholder="Email">
            </div>

            <div class="px-8 w-full">
                <input class="w-full outline-0 ring-0 focus:outline-0 rounded-xl p-3" type="password" name="Password" id="Password" placeholder="Password">
            </div>

            <div class="mb-4 flex items-center justify-between w-full px-8">
                <a class="text-violet-400" href="/Users/Register">Don't have an account? Register</a>
                <button class="px-4 py-2 rounded bg-violet-600 text-white font-bold" type="submit">Login</button>
            </div>
        </div>
    </form>
</div>